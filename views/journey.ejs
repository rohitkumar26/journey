<div class="columns is-centered">
    <div class="column is-half">
<h1 class="title is-1">Journey</h1>
<form action="/journey" method="POST">
 
    
    <label for="date" class="label" >Date</label>
    <input type="date" name="date" ><br>

    <label for="data" class="label" >New Entry</label>
    <textarea name="data"  class="textarea"></textarea>
    <!-- <input type="text" class="input"name="data"> -->

<input type="submit" class="button is-primary mt-2" value="Submit">
</form>
<%  if(typeof result !== 'undefined') { result.forEach(el=>{%> 
    <h1 class="has-text-centered title is-5"><%= el.date.toString().substr(0,15) %></h1>
    <h1 class="has-text-centered"><code><%= el.data %>  </code></h1>
<% })} %> 

</div>
</div>